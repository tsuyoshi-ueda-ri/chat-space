.main_chat
  .main_chat__info
    .main_chat__info__box
      .main_chat__info__box__group-name
        test
        .main_chat__info__box__edit
          = link_to 'Edit','#', class: "edit-btn" 
      .main_chat__info__box__menber-name
        Menber:masa
  .main_chat__message
    = render @messages
    .main_chat__message__box
      .main_chat__message__box__name
        masa
        .main_chat__message__box__name__login-time
          2019/11/20(wed)17:43:01
      .main_chat__message__box__comment
        おはよう！
  .main_chat__form
    = form_with model: [@group, @message], html: {class: "main_chat__form__box"}, local: true do |f|
      .main_chat__form__box__input
       = f.text_field :content, class: 'name__text', placeholder: "type a message"
       = f.label :image, class: 'class-name__text__icon' do
          = icon('far', 'image', class: 'Form__icon')
          = f.file_field :image, class: 'name__text__icon__label'
      = f.submit 'Send', class: 'name__submit'
            